      -#     %a{:href => "#documents"} FILES
      -#   -# %dd
      -#   -#   %a{:href => "#drivers"} DRIVERS
      -# .tabs-content
      -#   #documents.content.active
      %table.table.table-striped.table-hover
        %thead
          %tr
            %th{width: 850}
              Filename
            %th{width: 100}
              Kind
        %tbody
          - if @item.documents.empty?
            = render 'empty'
          - else
            = render partial: 'document', collection: @item.documents
