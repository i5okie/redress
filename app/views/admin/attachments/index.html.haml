.row
  .large-12.columns
    .panel
      %i.fa.fa-list Attachments
      %a.pull-right{:href => new_admin_attachment_path}
        %i.fa.fa-plus.fa-1x 
    %table.tude
      %thead
        %tr.classy
          %th{width: 400} Name
          %th{width: 150} File
          %th{width: 225}
      %tbody
        - @attachments.each do |attm|
          %tr
            %td= attm.name
            %td= attm.file
            %td
              .button-group.radius.pull-right
                %a.button.secondary.tiny{:href => admin_attachment_path(attm)}
                  %i.fa.fa-info.fa-fw
                  
                %a.button.secondary.tiny{:href => edit_admin_attachment_path(attm)}
                  %i.fa.fa-pencil.fa-fw
                  
                = link_to admin_attachment_path(attm), method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert tiny" do
                  %i.fa.fa-trash-o.fa-fw
    %br