.row
  .large-12.columns
    .panel
      %i.fa.fa-list Items
      %a.pull-right{:href => new_admin_item_path}
        %i.fa.fa-plus.fa-1x 
    %table.tude
      %thead
        %tr.classy
          %th{width: 400} Name
          %th{width: 150} Manufacturer
          %th{width: 200} Model
          %th{width: 225}
      %tbody
        - @items.each do |item|
          %tr
            %td= item.name
            %td= item.manufacturer.name
            %td= item.modelname
            %td
              .button-group.radius.pull-right
                %a.button.secondary.tiny{:href => item_path(item)}
                  %i.fa.fa-info.fa-fw
                  
                %a.button.secondary.tiny{:href => edit_admin_item_path(item)}
                  %i.fa.fa-pencil.fa-fw
                  
                = link_to admin_item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "button alert tiny" do
                  %i.fa.fa-trash-o.fa-fw

                
    %br

    / %a.button.alert.tiny{:href => item, method: :delete, data: { confirm: 'Are you sure?' }}